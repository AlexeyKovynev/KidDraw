<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="oval">

            <solid android:color="#FF757575"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape
            android:dither="true"
            android:shape="oval" >
            <size
                android:height="@dimen/brush_large"
                android:width="@dimen/brush_large" />

            <solid android:color="#eeeeee" />
        </shape>
    </item>

</layer-list>